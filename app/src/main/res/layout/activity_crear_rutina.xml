<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearRutinaActivity"
    android:background="@drawable/gradient_background">

    <!-- Contenedor principal con LinearLayout vertical -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:padding="20dp">

        <!-- Campo Nombre de la rutina -->
        <EditText
            android:id="@+id/txt_nombre"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:textSize="18dp"
            android:padding="5dp"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:hint="Nombre de la rutina"
            android:gravity="center"
            android:textColor="@color/white"/>

        <!-- Spinner de Grupo Muscular -->
        <Spinner
            android:id="@+id/spinner_grupo_muscular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="40dp"/>

        <!-- Spinner de Ejercicio -->
        <Spinner
            android:id="@+id/spinner_ejercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="10dp"/>

        <!-- Campo de Repeticiones -->
        <EditText
            android:id="@+id/txt_repes"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:textSize="18dp"
            android:inputType="number"
            android:background="@drawable/edittext_background"
            android:hint="Repeticiones"
            android:gravity="center"
            android:layout_marginTop="40dp"/>

        <!-- Campo de Series -->
        <EditText
            android:id="@+id/txt_series"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:textSize="18dp"
            android:inputType="number"
            android:background="@drawable/edittext_background"
            android:hint="Series"
            android:gravity="center"
            android:layout_marginTop="40dp"/>

        <!-- BotÃ³n de Guardar Rutina -->
        <Button
            android:id="@+id/guardarRutina"
            android:layout_width="match_parent"
            android:textSize="22dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="5dp"
            android:text="Guardar rutina"
            android:drawableStart="@drawable/baseline_assignment_addw_24"
            android:background="@drawable/gradient_gray_black"
            android:padding="10dp"/>
    </LinearLayout>

</RelativeLayout>
