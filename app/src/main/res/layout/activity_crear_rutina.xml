<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearRutinaActivity"
    android:background="@drawable/purple_background">

    <EditText
        android:id="@+id/txt_nombre"
        android:layout_width="wrap_content"
        android:ems="10"
        android:layout_height="32dp"
        android:padding="5dp"
        android:inputType="text"
        android:background="@drawable/social_btn_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:hint="Nombre de la rutina"
        android:textColor="@color/white"/>

    <!-- Spinner de Grupo Muscular -->
    <Spinner
        android:padding="10dp"
        android:id="@+id/spinner_grupo_muscular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_nombre"
        android:layout_margin="30dp"/>

    <!-- Spinner de Ejercicio -->
    <Spinner
        android:id="@+id/spinner_ejercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_grupo_muscular"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:padding="10dp"/>

    <!-- Otros campos -->
    <EditText
        android:id="@+id/txt_repes"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:padding="5dp"
        android:ems="5"
        android:inputType="number"
        android:layout_below="@+id/spinner_ejercicio"
        android:background="@drawable/social_btn_background"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:hint="Repeticiones"/>

    <EditText
        android:id="@+id/txt_series"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:padding="5dp"
        android:ems="5"
        android:inputType="number"
        android:layout_below="@+id/spinner_ejercicio"
        android:background="@drawable/social_btn_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:hint="Series"
        android:layout_toRightOf="@+id/txt_repes"/>

    <Button
        android:id="@+id/guardarRutina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_series"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Guardar rutina"
        android:background="@drawable/social_btn_background"/>
</RelativeLayout>
