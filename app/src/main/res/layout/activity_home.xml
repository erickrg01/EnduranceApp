<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_frag"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">


    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        app:mcv_tileSize="50dp"
        android:layout_height="wrap_content"
        app:mcv_firstDayOfWeek="monday"
        app:mcv_showOtherDates="defaults"
        app:mcv_tileHeight="50dp"
        app:mcv_tileWidth="55dp"
        android:padding="5dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/gradient_gray_white"
        />

    <Button
        android:id="@+id/regs_entre"

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/calendarView"
        android:layout_marginTop="40dp"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:onClick="btnRegEntrenamiento"
        android:layout_centerHorizontal="true"
        android:text="registro de entrenamientos"
        android:drawableStart="@drawable/baseline_assignment_add_24"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/gradient_gray_white"/>
    <Button
        android:id="@+id/nutricion"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/regs_entre"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text="nutriciÃ³n"
        android:textSize="24dp"
        android:drawableStart="@drawable/nutrimini"
        android:onClick="btnNutri"
        android:background="@drawable/gradient_green_black"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:layout_marginHorizontal="10dp"/>

</RelativeLayout>