<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_frag"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_background">


    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="300dp"
        app:mcv_firstDayOfWeek="monday"
        app:mcv_showOtherDates="all"
        app:mcv_tileSize="50dp"
        />

    <Button
        android:id="@+id/rutina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/calendarView"
        android:text="Mi Rutina"
        android:onClick="miRutina"
        android:background="@drawable/social_btn_background"/>
    <Button
        android:id="@+id/regs_entre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rutina"
        android:layout_marginTop="40dp"
        android:onClick="btnRegEntrenamiento"
        android:layout_centerHorizontal="true"
        android:text="registro de entrenamientos"
        android:background="@drawable/social_btn_background"/>
    <Button
        android:id="@+id/nutricion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regs_entre"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="nutriciÃ³n"
        android:onClick="btnNutri"
        android:background="@drawable/social_btn_background"/>

</RelativeLayout>