<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddRoutineFragment"
    android:background="@drawable/purple_background">


    <Button
        android:id="@+id/new_routine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:text="@string/crear_rutina"
        android:onClick="addNewRoutine"
        android:background="@drawable/social_btn_background"/>
    <Button
        android:id="@+id/asignar_rutina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_routine"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="asignar rutina"
        android:onClick="asignarRutina"
        android:background="@drawable/social_btn_background"/>
    <Button
        android:id="@+id/nutricion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asignar_rutina"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="@string/nutrici_n"
        android:background="@drawable/social_btn_background"/>

</RelativeLayout>