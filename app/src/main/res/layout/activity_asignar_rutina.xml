<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsignarRutinaActivity"
    android:background="@drawable/purple_background">

    <TextView
        android:id="@+id/txtNombreRutina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la rutina:"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>
    <TextView
        android:id="@+id/txtGrupoMuscular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grupo muscular:"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtNombreRutina"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/txtEjercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicio:"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtGrupoMuscular"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/numSeries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEjercicio"
        android:text="Series:"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"/>
    <TextView
        android:id="@+id/numReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEjercicio"
        android:layout_toRightOf="@+id/numSeries"
        android:text="Repeticiones:"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"/>

    <!-- Spinner para seleccionar usuario -->
    <Spinner
        android:id="@+id/spinnerUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/numSeries"
        android:padding="10dp"/>

    <!-- Spinner para seleccionar rutina -->
    <Spinner
        android:id="@+id/spinnerRutinas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_below="@+id/spinnerUsuarios"/>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxDias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerRutinas"
        app:flexWrap="wrap"
        app:justifyContent="flex_start"
        android:layout_margin="15dp"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/ckMonday"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Lunes"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="5dp"
            />

        <CheckBox
            android:id="@+id/ckTuesday"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Martes"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="5dp"/>

        <CheckBox
            android:id="@+id/ckWednesday"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Miércoles"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="5dp"/>

        <CheckBox
            android:id="@+id/ckThursday"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Jueves"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="5dp"/>

        <CheckBox
            android:id="@+id/ckFriday"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Viernes"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="5dp"/>

        <CheckBox
            android:id="@+id/ckSaturday"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Sábado"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="5dp"/>

        <CheckBox
            android:id="@+id/ckSunday"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Domingo"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="5dp"/>
    </com.google.android.flexbox.FlexboxLayout>

    <RadioGroup
        android:id="@+id/tipoEntrenamiento"
        android:layout_below="@id/flexboxDias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RadioButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Fuerza"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="5dp"/>
        <RadioButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Hipertrofia"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="5dp"/>
        <RadioButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Resistencia"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="5dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnAsignar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asignar"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tipoEntrenamiento"
        android:background="@drawable/social_btn_background"/>


</RelativeLayout>
